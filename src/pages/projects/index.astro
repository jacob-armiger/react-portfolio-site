---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const projects = await getCollection("projects");
---

<Layout title="Art">
    <main class="mx-4">
        {
            projects.map((project) => (
                <div class="hover:bg-primary hover:text-secondary mb-8 h-fit rounded-md font-mono">
                    <a href={"/projects/" + project.data.title}>
                        <div class="flex flex-1 flex-col p-3 md:p-4">
                            <p class="mb-4 text-2xl font-medium">{project.data.title}</p>
                            <p class="mb-2 font-sans text-lg">{project.data.description}</p>
                            <div class="flex flex-row gap-4 text-sm">
                                {project.data.tags.map((tag: any) => (
                                    <p>{tag}</p>
                                ))}
                            </div>
                        </div>
                    </a>
                </div>
            ))
        }
    </main>
</Layout>
