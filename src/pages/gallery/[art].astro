---
import { Image } from "astro:assets";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
    const artEntries = await getCollection('art');
    return artEntries.map((entry) => ({
        params: { art: entry.id },
        props: { entry },
    }));
}

import Prose from "../../components/Prose.astro";
import Layout from "../../layouts/Layout.astro";

const { entry } = Astro.props;
const { Content } = await render(entry);
---

<Layout title="art post">
    <main class="sm:mx-2">
        <figure class="sm:max-w-[550px] 2xl:ml-8 2xl:w-[600px] mx-auto">
            <Image src={entry?.data.image} alt="Large image of art" width={1600} loading={"eager"} class="dark:rounded-sm dark:shadow-none shadow-md shadow-stone-500 "/>
        </figure>
        <div class="mt-2 w-fit mx-auto">
            <Prose>
                {entry.data.reference ?
                <div class="text-sm mb-5">
                    <p class="my-0" >Reference:</p>
                    <a href={entry.data.reference_url} class="italic">{entry.data.reference}</a>
                </div>
                : <></>
                }
                <h1 class="mb-0 mt-4">{entry.data.title}</h1>
                <p class="text-sm italic pr-1 mt-1">{String(entry.data.date.toISOString().slice(0,10))}</p>
                <Content />
            </Prose>
        </div>
    </main>
</Layout>
