---
interface Props {
    book: any;
}

const { book } = Astro.props;
---

<div class="mb-14 cursor-default">
    <div class="h-fit max-h-96 overflow-y-scroll rounded-t-md border border-b-0 border-solid border-custom px-4 pb-4 text-xl text-fade">
        <div>
            <p
                class="sticky top-0 bg-custom bg-opacity-95 pt-0 font-serif text-3xl font-bold text-fade">
                {book.Title}
            </p>
            <p class="pb-3 text-sm italic">by {book.Author}</p>
            <p class="whitespace-pre-line">{book["My Review"]}</p>
        </div>
    </div>
    {
        book["Date Read"] ? (
            <div class="text-mono bg-accent bottom-0 mx-4 flex border border-x-0 border-b-0 border-solid border-fade text-fade">
                <p class="grow">Read {book["Date Read"]}</p>
                <p class="pr-2 text-right">{book["My Rating"]}/5</p>
            </div>
        ) : (
            <div class="bottom-0 rounded-b-md border border-t-0 border-solid border-black">
                <p class="h-6 grow pl-2" />
            </div>
        )
    }
</div>
