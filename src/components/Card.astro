---
interface Props {
    book: any;
}

const { book } = Astro.props;
---

<div class="my-4 cursor-default">
    <div
        class="h-fit max-h-96 overflow-y-scroll rounded-t-md border border-b-0 border-solid border-black px-4 pb-4 text-xl">
        <div>
            <p class="sticky top-0 bg-white bg-opacity-95 pt-4 font-serif text-3xl font-bold">
                {book.Title}
            </p>
            <p class="pb-3 text-sm italic">by {book.Author}</p>
            <p class="whitespace-pre-line">{book["My Review"]}</p>
        </div>
    </div>
    {
        book["Date Read"] ? (
            <div class="text-mono bg-accent bottom-0 flex rounded-b-md border border-solid border-black text-black">
                <p class="grow pl-2">Read {book["Date Read"]}</p>
                <p class="pr-2 text-right">{book["My Rating"]}/5</p>
            </div>
        ) : (
            <div class="bottom-0 rounded-b-md border border-t-0 border-solid border-black">
                <p class="h-6 grow pl-2" />
            </div>
        )
    }
</div>
