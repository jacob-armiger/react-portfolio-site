---
// https://jahir.dev/blog/astro-reading-time
import { Image } from "astro:assets";
// import { getReadingTime } from '../scripts/reading-time';
import type { CollectionEntry } from "astro:content";

interface Props {
    art: CollectionEntry<"art">;
}

const { art } = Astro.props;

// const readingTime = getReadingTime(art.body);
---

<a href={"/gallery/" + art.id} class="mb-2 hover:underline">
    <Image
        src={art.data.image}
        alt="Gallery image"
        width={300}
        class="w-full object-cover shadow-md shadow-stone-500 sm:h-[48vw] lg:h-[24vw] dark:rounded-lg dark:shadow-none"
    />
    <div class="flex flex-col">
        <div class="flex flex-col font-mono">
            <span class="mb-0 mt-1 text-wrap text-lg font-bold leading-none">{art.data.title}</span>
            <span class="pr-1 text-sm font-thin"
                >{String(art.data.date.toISOString().slice(0, 10))}</span
            >
            <p class="... float-left mt-1 line-clamp-2 w-full truncate text-wrap break-all text-sm">
                {art.body}
            </p>
        </div>
    </div>
</a>
